<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           style="-fx-background-color: rgba(0, 0, 0, 0.6);"> <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="500.0" prefHeight="500.0" prefWidth="600.0" spacing="0" styleClass="settings-card">

    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20; -fx-border-color: transparent transparent rgba(255,255,255,0.1) transparent;">
        <Label fx:id="serverTitleLabel" styleClass="h2" text="НАСТРОЙКИ СЕРВЕРА" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#onClose" styleClass="icon-button, close-button" text="✕" />
    </HBox>

    <VBox spacing="10" VBox.vgrow="ALWAYS" style="-fx-padding: 20;">
        <Label text="Менеджер модификаций" style="-fx-text-fill: -fx-text-base-color; -fx-opacity: 0.7; -fx-font-size: 14px;" />

        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="mods-scroll-pane" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="modsContainer" spacing="12" style="-fx-padding: 5;">
                </VBox>
            </content>
        </ScrollPane>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20; -fx-background-color: rgba(0,0,0,0.1);">

        <Button onAction="#onReinstall" styleClass="button-outlined, button-danger" text="Переустановить клиент">
            <style>
                -fx-text-fill: #ff6b6b;
                -fx-border-color: #ff6b6b;
            </style>
        </Button>

        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onOpenFolder" styleClass="button-outlined" text="Открыть папку" />

        <Button onAction="#onClose" styleClass="button-primary" text="Сохранить и Закрыть" />
    </HBox>

</VBox>
</StackPane>