<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" styleClass="root-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/21">>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="label-title" text="Настройки" />

        <VBox spacing="10.0">
            <Label styleClass="label-subtitle" text="Путь к Java (java.exe)" />
            <TextField fx:id="javaPathField" styleClass="text-field" />
        </VBox>

        <VBox spacing="10.0">
            <Label styleClass="label-subtitle" text="Выделенная память (MB)" />
            <TextField fx:id="memoryField" styleClass="text-field" />
        </VBox>

        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
            <Label styleClass="label-subtitle" text="Путь к кастомной теме (CSS, опционально)" />
            <TextField fx:id="themePathField" styleClass="text-field" />
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button onMouseClicked="#onSaveClick" styleClass="btn, btn-accent" text="Сохранить" />
            <Button onMouseClicked="#onCancelClick" styleClass="btn, btn-secondary" text="Отмена" />
        </HBox>
    </children>
</VBox>