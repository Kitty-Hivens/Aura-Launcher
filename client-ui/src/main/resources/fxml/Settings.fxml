<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane fx:id="root" prefHeight="400.0" prefWidth="500.0" stylesheets="@aura-theme.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hivens.ui.SettingsController">

    <Rectangle height="400.0" width="500.0" arcWidth="20" arcHeight="20" fill="#141e30" opacity="0.95"/>

    <VBox spacing="0">
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 20;">
            <Label text="ГЛОБАЛЬНЫЕ НАСТРОЙКИ" styleClass="label-title" style="-fx-font-size: 20px;"/>
        </HBox>

        <VBox spacing="20" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">

            <VBox spacing="5">
                <Label text="Путь к Java" styleClass="setting-label"/>
                <HBox spacing="10">
                    <TextField fx:id="javaPathField" promptText="Авто" HBox.hgrow="ALWAYS" styleClass="aura-input"/>
                    <Button text="..." onAction="#onBrowseJava" styleClass="icon-btn"/>
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label text="Память (MB)" styleClass="setting-label"/>
                <TextField fx:id="memoryField" promptText="4096" styleClass="aura-input" maxWidth="100"/>
            </VBox>

            <CheckBox fx:id="closeAfterStart" text="Закрывать после запуска" styleClass="aura-checkbox" style="-fx-text-fill: white;"/>

            <VBox spacing="5">
                <Label text="Тема" styleClass="setting-label"/>
                <ComboBox fx:id="themeSelector" styleClass="aura-input"/>
            </VBox>

        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20;">
            <Button text="ОТМЕНА" onAction="#onClose" styleClass="aura-btn-secondary"/>
            <Button text="СОХРАНИТЬ" onAction="#onSave" styleClass="aura-btn-primary"/>
        </HBox>
    </VBox>
</StackPane>