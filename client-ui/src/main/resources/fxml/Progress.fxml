<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane fx:id="root" prefHeight="250.0" prefWidth="450.0" stylesheets="@aura-theme.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hivens.ui.ProgressController">

    <Rectangle height="250.0" width="450.0" arcWidth="20" arcHeight="20" fill="#141e30" opacity="0.95"/>

    <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30;">

        <Label text="ЗАПУСК ИГРЫ" styleClass="label-title" style="-fx-font-size: 20px;"/>

        <Label fx:id="master" text="Подготовка..." styleClass="setting-label"/>
        <Label fx:id="description" text="Инициализация..." styleClass="label-subtitle"/>

        <ProgressBar fx:id="progressBar" prefWidth="380.0" progress="0.0" style="-fx-accent: #00aaff;"/>

        <Label fx:id="progress" text="0%" styleClass="label-subtitle"/>

    </VBox>
</StackPane>