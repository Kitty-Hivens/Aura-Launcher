<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane fx:id="root" prefHeight="250.0" prefWidth="450.0" styleClass="root-pane" stylesheets="@aura-theme.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hivens.ui.ProgressController">

    <Rectangle height="250.0" width="450.0" arcWidth="20" arcHeight="20" style="-fx-fill: -fx-panel-bg;" opacity="0.95"/>

    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">

        <Label text="ЗАПУСК ИГРЫ" styleClass="label-title" style="-fx-font-size: 20px;"/>

        <Label fx:id="statusLabel" text="Инициализация..." styleClass="label-subtitle" wrapText="true" textAlignment="CENTER"/>

        <VBox spacing="5" alignment="CENTER">
            <ProgressBar fx:id="progressBar" prefWidth="380.0" progress="0.0" style="-fx-accent: -fx-accent-color;"/>
        </VBox>

    </VBox>
</StackPane>